pipeline {
    agent { label 'Akaza'}
    tools {
        jdk 'OpenJDK17'
    }

    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'staging', 'prod'], description: 'Environment to deploy to')
        choice(name: 'ACTION', choices: ['plan', 'apply', 'destroy'], description: 'Terraform action to perform')
    }

    environment {
        TF_IN_AUTOMATION = 'true'
        AWS_REGION        = 'eu-west-2'
        TF_VAR_cloudflare_api_token = credentials('CLOUDFLARE_API_TOKEN')
        TF_VAR_cloudflare_zone_id   = credentials('CLOUDFLARE_ZONE_ID')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('infrastructure/terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Format') {
            steps {
                dir('infrastructure/terraform') {
                    sh 'terraform fmt -check'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('infrastructure/terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Fetch Config from SSM') {
            steps {
                dir('infrastructure/terraform') {
                    script {
                        def params_json = sh(
                            script: "aws ssm get-parameters-by-path --path '/config/${params.ENVIRONMENT}/' --region ${env.AWS_REGION} --query 'Parameters[*].[Name,Value]' --output json",
                            returnStdout: true
                        ).trim()
                        
                        def params_list = readJSON text: params_json
                        def tfvars_content = ""
                        params_list.each { p ->
                            def name = p[0].split('/').last()
                            def value = p[1]
                            if (name == "allowed_ips") {
                                tfvars_content += "${name} = [\"${value}\"]\n"
                            } else {
                                tfvars_content += "${name} = \"${value}\"\n"
                            }
                        }
                        writeFile file: 'ssm.auto.tfvars', text: tfvars_content
                        sh "cat ssm.auto.tfvars" // Debugging
                    }
                }
            }
        }

        stage('Terraform Plan') {
            when {
                expression { params.ACTION == 'plan' || params.ACTION == 'apply' }
            }
            steps {
                dir('infrastructure/terraform') {
                    sh "terraform plan -out=tfplan"
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir('infrastructure/terraform') {
                    sh "terraform apply -auto-approve tfplan"
                }
            }
        }

        stage('Build Application') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir('app') {
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Deploy Application') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir('infrastructure/ansible') {
                    sh "ansible-playbook -i aws_ec2.yml playbook.yml"
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                dir('infrastructure/terraform') {
                    sh "terraform destroy -auto-approve"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
